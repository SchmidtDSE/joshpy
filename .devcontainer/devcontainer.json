{
    "name": "joshpy",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "../",
        "options": ["--platform=linux/amd64"]
    },
    // "runArgs": [
    //     "--userns=keep-id",
    //     "--ulimit", "nofile=65536:65536"
    // ],
    "mounts": [
        "source=${localWorkspaceFolderBasename}-pixi,target=/home/vscode/.pixi-env,type=volume"
    ],
    "updateRemoteUserUID": true,
    "remoteUser": "root",
    "containerUser": "root",
    "postCreateCommand": "ln -sfn /home/vscode/.pixi-env .pixi && pixi install && pixi run install-dev && pixi run get-jars",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/common-utils:2.5.3": {
            "installSsh": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff",
                "ms-toolsai.jupyter@2025.7.0",
                "redhat.vscode-yaml"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/workspaces/joshpy/.pixi/envs/default/bin/python",
                "python.testing.pytestEnabled": true,
                "python.testing.unittestEnabled": false,
                "editor.formatOnSave": true,
                "terminal.integrated.enableOsc52": true,
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "editor.codeActionsOnSave": {
                        "source.fixAll": "explicit",
                        "source.organizeImports": "explicit"
                    }
                }
            }
        }
    }
}
